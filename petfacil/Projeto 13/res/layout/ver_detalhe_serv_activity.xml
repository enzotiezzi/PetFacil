<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">

    <TextView
        android:id="@+id/tvNomeServ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCategoriaServ"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="TextView"
        android:textColor="#005500"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvCategoriaServ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNomeServ"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#005500"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvPrecoServ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCategoriaServ"
        android:layout_below="@+id/tvCategoriaServ"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textColor="#005500"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvlistaServ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
       	android:background="#00dd00"
        android:text="ServiÃ§os"
        android:textColor="#006600"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvNomeLojaViewServ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#00dd00"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#006600"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans" />

